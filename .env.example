# ML-709 Adversarial Agents - Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# LLM Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# Agent Under Test (vLLM - Local Models)
# The agent being studied for adversarial robustness uses local models
# -----------------------------------------------------------------------------
VLLM_BASE_URL=http://localhost:8000/v1
VLLM_MODEL=mistralai/Mistral-Small-Instruct-2409

# -----------------------------------------------------------------------------
# ADRS - AI-Driven Research System (Claude Opus 4.5)
# The research system uses Claude Code Bridge - NO API KEY NEEDED!
# It uses your Claude CLI authentication (OAuth).
#
# Just run 'claude' once to login, then ADRS will use your subscription.
# -----------------------------------------------------------------------------
# ANTHROPIC_API_KEY=  # Not needed - uses Claude CLI auth
# ANTHROPIC_MODEL=opus  # Set via CLI, defaults to Opus 4.5

# -----------------------------------------------------------------------------
# OpenAI (Optional - Cloud Fallback for ensemble)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# =============================================================================
# Database Configuration
# =============================================================================

# SQLite (Default)
DATABASE_URL=sqlite+aiosqlite:///experiments/experiments.db

# =============================================================================
# Experiment Configuration
# =============================================================================

# Default experiment settings
DEFAULT_MAX_LOOPS=10
DEFAULT_TEMPERATURE=0.7
DEFAULT_TIMEOUT_SECONDS=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# ADRS Configuration
# =============================================================================

# Inner loop settings
ADRS_POPULATION_SIZE=50
ADRS_GENERATIONS=100
ADRS_MUTATION_RATE=0.1

# Outer loop settings
ADRS_BEAM_WIDTH=5
ADRS_MAX_DEPTH=10

# =============================================================================
# Benchmarks
# =============================================================================

# HuggingFace token (for gated datasets)
HF_TOKEN=

# Cache directory
HF_HOME=~/.cache/huggingface
